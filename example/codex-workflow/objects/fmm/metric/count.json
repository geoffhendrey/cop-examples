{
  "namespace": {
    "name": "@INSTALL ${$sys.solutionId}",
    "version": 1
  },
  "kind": "metric",
  "name": "healthrule.violation.count",
  "displayName": "Health rule violations",
  "description": "Counts the number of health rule violations",
